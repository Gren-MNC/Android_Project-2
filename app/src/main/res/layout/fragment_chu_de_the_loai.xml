<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativeChuDeTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tvTitleChuDeVaTheLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top bài hát hot"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvXemThemChuDeTheLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xem thêm"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:layout_alignParentRight="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/firebase_song_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleChuDeVaTheLoai"/>
    </RelativeLayout>
</RelativeLayout>