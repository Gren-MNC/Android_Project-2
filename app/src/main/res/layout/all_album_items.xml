<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/linearLayout_album_items"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:background="@drawable/background"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/frameLayoutAllAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewAllAlbum"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvAllAlbum"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="2"
            android:maxWidth="180dp"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Nhạc việt hot"
            android:textSize="20dp"

            android:textColor="#fff" />
        <TextView
            android:id="@+id/tvAllAlbumSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:text="Various Artists"
            android:textColor="#fff"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>