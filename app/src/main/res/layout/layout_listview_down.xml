<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idListViewDownLayout"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_music" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imv_music"
        android:text="Music"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single"
        android:layout_toRightOf="@id/imgv_ic_down"
        android:layout_below="@id/tvName"
        android:textSize="18dp" />
    <ImageView
        android:id="@+id/imgv_ic_down"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_download_deep_lilac"
        android:layout_below="@id/tvName"
        android:layout_toRightOf="@id/imv_music"
        android:layout_marginRight="5dp"/>
</RelativeLayout>