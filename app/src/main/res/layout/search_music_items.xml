<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageViewSearchMusic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music" />
    <TextView
        android:id="@+id/tvSearchMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="40dp"
        android:text="Tên bài hát"
        android:textSize="16sp"
        android:layout_toRightOf="@id/imageViewSearchMusic"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/tvSearchMusicSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSearchMusic"
        android:layout_toRightOf="@id/imageViewSearchMusic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:text="Ca sĩ"
        android:textColor="#fff"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/imageViewLuotThichSearchMusic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_like1"/>
</RelativeLayout>