<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/background_single"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="20dp"
        android:background="@drawable/teayang">
        <Button
            android:id="@+id/btn_back_singer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_back"/>
        <TextView
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="TEAYANG"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_name"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_add"
                android:background="@drawable/btn_play_random"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Theo dõi"

                />
            <Button
                android:id="@+id/btn_playrandom"
                android:layout_width="150dp"
                android:background="@drawable/btn_play_random"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Phát nhạc"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list_item"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_single">
        <TextView
            android:id="@+id/top_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài Hát Nổi Bật"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_data"
            android:layout_below="@+id/top_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"

        android:layout_alignParentBottom="true"
        android:background="@color/purple_200"
        android:padding="12dp">
        <ImageView
            android:id="@+id/img_song"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_toEndOf="@+id/img_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="14sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_pre_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/img_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="150dp"
            android:src="@drawable/ic_pre"/>
        <ImageView
            android:id="@+id/btn_next_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/img_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_next"/>

        <ImageView
            android:id="@+id/img_pause_or_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/img_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:src="@drawable/ic_pause"/>
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_clear"/>

    </RelativeLayout>

</RelativeLayout>