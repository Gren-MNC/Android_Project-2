<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/background_single"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="20dp"
        android:background="@drawable/teayang">
        <Button
            android:id="@+id/btn_back_singer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_back"/>
        <TextView
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="TEAYANG"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list_item"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_single">
        <TextView
            android:id="@+id/top_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài Hát Nổi Bật"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_data"
            android:layout_below="@+id/top_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true">
        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.layoutservice.Fragment.Fragment_MiniPlayer"
            />
    </FrameLayout>
</RelativeLayout>