<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/background_single"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="20dp"
        android:background="@drawable/teayang">
        <TextView
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="TEAYANG"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_name"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_add"
                android:background="@drawable/btn_play_random"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Theo dõi"

                />
            <Button
                android:id="@+id/btn_playrandom"
                android:layout_width="150dp"
                android:background="@drawable/btn_play_random"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Phát nhạc"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list_item"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background_single">
        <TextView
            android:id="@+id/top_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài Hát Nổi Bật"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
       <LinearLayout
           android:layout_below="@+id/top_song"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_marginTop="10dp"
               android:layout_below="@+id/top_song"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/img_song"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/eyenoselips"
                   />
               <LinearLayout
                   android:layout_toEndOf="@id/img_song"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="14dp"
                   android:layout_centerHorizontal="true"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/tv_song"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textColor="@color/black"
                       android:textSize="20sp"
                       />
                   <TextView
                       android:id="@+id/tv_single"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textSize="17sp" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:layout_marginTop="10dp"
               android:layout_below="@+id/top_song"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/img_song2"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/eyenoselips"
                   />
               <LinearLayout
                   android:layout_toEndOf="@id/img_song2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="14dp"
                   android:layout_centerHorizontal="true"
                   android:orientation="vertical">
                   <TextView

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textColor="@color/black"
                       android:textSize="20sp"
                       />
                   <TextView

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textSize="17sp" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:layout_marginTop="10dp"
               android:layout_below="@+id/top_song"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/img_song3"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/eyenoselips"
                   />
               <LinearLayout
                   android:layout_toEndOf="@id/img_song3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="14dp"
                   android:layout_centerHorizontal="true"
                   android:orientation="vertical">
                   <TextView

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textColor="@color/black"
                       android:textSize="20sp"
                       />
                   <TextView

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textSize="17sp" />
               </LinearLayout>
           </RelativeLayout>
           <RelativeLayout
               android:layout_marginTop="10dp"
               android:layout_below="@+id/top_song"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/img_song4"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/eyenoselips"
                   />
               <LinearLayout
                   android:layout_toEndOf="@id/img_song4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="14dp"
                   android:layout_centerHorizontal="true"
                   android:orientation="vertical">
                   <TextView

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textColor="@color/black"
                       android:textSize="20sp"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/app_name"
                       android:textSize="17sp" />
               </LinearLayout>
           </RelativeLayout>
       </LinearLayout>
    </RelativeLayout>
</RelativeLayout>