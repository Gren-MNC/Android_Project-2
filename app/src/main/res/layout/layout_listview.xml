<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idListViewLayout"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_music" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imv_music"
        android:text="Music"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single"
        android:layout_toRightOf="@id/imv_music"
        android:layout_below="@id/tvName"
        android:textSize="18dp" />
    <Button
        android:id="@+id/btn_download"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_download_deep_lilac"
        android:layout_alignParentEnd="true"
        android:contentDescription="btn_download"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_like2"
        android:layout_toLeftOf="@id/btn_download"
        android:layout_marginRight="10dp"/>
</RelativeLayout>